{
  "name": "easy-ocr",
  "description": "A binding for easyocr, supporting async operations.",
  "version": "2024.7.22",
  "author": {
    "email": "simonegauli@gmail.com",
    "name": "Simone Gauli"
  },
  "main": "./dist/esm/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "engines": {
    "node": ">=18.x"
  },
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "type": "module",
  "license": "MIT",
  "keywords": [
    "Easy ocr",
    "OCR",
    "Image to text",
    "Python ocr"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pnlvfx/easy-ocr.git"
  },
  "scripts": {
    "generate:package.json": "tsx ./tools/generate-commonjs-package-json.ts dist/cjs/package.json",
    "dev": "tsc -w & node --watch .",
    "start": "node .",
    "lint": "eslint .",
    "build": "rimraf dist && eslint . && tsc && npm run build:cjs && npm run generate:package.json",
    "build:cjs": "tsc --module CommonJS --moduleResolution Node --outDir dist/cjs",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint",
    "pretest": "npm run lint && tsc --noEmit",
    "test": "rimraf coverage && NODE_OPTIONS=--experimental-vm-modules jest --verbose --coverage"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "python"
  ],
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.11",
    "eslint": "^9.7.0",
    "eslint-plugin-sonarjs": "^1.0.3",
    "eslint-plugin-unicorn": "^54.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.3",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.0-alpha.49"
  },
  "dependencies": {
    "coraline": "github:Pnlvfx/coraline"
  }
}
